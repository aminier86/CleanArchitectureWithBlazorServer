@page "/pages/ejemplos"

@using CleanArchitecture.Blazor.Application.Features.Ejemplos.Caching
@using CleanArchitecture.Blazor.Application.Features.Ejemplos.DTOs
@using CleanArchitecture.Blazor.Application.Features.Ejemplos.Specifications
@using CleanArchitecture.Blazor.Application.Features.Ejemplos.Commands.Delete
@using CleanArchitecture.Blazor.Application.Features.Ejemplos.Commands.Import
@using CleanArchitecture.Blazor.Application.Features.Ejemplos.Queries.Export
@using CleanArchitecture.Blazor.Application.Features.Ejemplos.Queries.Pagination
@using CleanArchitecture.Blazor.Application.Features.Ejemplos.Commands.AddEdit
@using CleanArchitecture.Blazor.Server.UI.Pages.Ejemplos.Components

@inject IStringLocalizer<Ejemplos> L
@inject BlazorDownloadFileService BlazorDownloadFileService

@attribute [Authorize(Policy = Permissions.Ejemplos.View)]
<PageTitle>@Title</PageTitle>

<MudDataGrid ServerData="@(ServerReload)"
                  FixedHeader="true"
                  FixedFooter="false"
                  Virtualize="false"
                  @bind-RowsPerPage="_defaultPageSize"
                  Loading="@_loading"
                  MultiSelection="true"
                  T="EjemploDto"
                  SelectOnRowClick="false"
                  RowClick="@(s=>OnDataGridRowClick(s.Item))"
                  @bind-SelectedItems="_selectedEjemplos"
                  Hover="true" @ref="_ejemplosGrid">
            <ToolBarContent>
                 <MudStack Row Spacing="0" Class="flex-grow-1" Justify="Justify.SpaceBetween">
            <MudStack Row AlignItems="AlignItems.Start">
                <MudIcon Icon="@Icons.Material.Filled.Window" Size="Size.Large" />
                <MudStack Spacing="0">
                    <MudText Typo="Typo.subtitle2" Class="mb-2">@Title</MudText>
                    <MudEnumSelect Style="min-width:120px" TEnum="EjemploListView" ValueChanged="OnListViewChanged" Value="_ejemplosQuery.ListView" Dense="true" Label="@L["List View"]">
                    </MudEnumSelect>
                </MudStack>
            </MudStack>
            <MudStack Spacing="0" AlignItems="AlignItems.End">
                <MudToolBar Dense WrapContent="true" Class="py-1 px-0">
                    <MudButton Disabled="@_loading"
                               OnClick="@(() => OnRefresh())"
                               StartIcon="@Icons.Material.Outlined.Refresh">
                        @ConstantString.Refresh
                    </MudButton>
                    @if (_accessRights.Create)
                    {
                        <MudButton StartIcon="@Icons.Material.Outlined.Add"
                                   OnClick="OnCreate">
                            @ConstantString.New
                        </MudButton>
                    }
                    <MudMenu TransformOrigin="Origin.BottomRight" AnchorOrigin="Origin.BottomRight" EndIcon="@Icons.Material.Filled.MoreVert" Label="@ConstantString.More">
                        @if (_accessRights.Create)
                        {
                            <MudMenuItem Disabled="@(_selectedEjemplos.Count != 1)" OnClick="OnCloneEjemplo">@ConstantString.Clone</MudMenuItem>
                        }
                        @if (_accessRights.Delete)
                        {
                            <MudMenuItem Disabled="@(!(_selectedEjemplos.Count > 0))"
                                         OnClick="OnDeleteSelectedEjemplos">
                                @ConstantString.Delete
                            </MudMenuItem>
                        }
                        @if (_accessRights.Export)
                        {
                            <MudMenuItem Disabled="@_exporting"
                                         OnClick="OnExport">
                                @ConstantString.Export
                            </MudMenuItem>
                        }
                        @if (_accessRights.Import)
                        {
                            <MudMenuItem>
                                <MudFileUpload T="IBrowserFile" FilesChanged="OnImportData" Accept=".xlsx">
                                    <ActivatorContent>
                                        <MudButton Class="pa-0 ma-0" Style="font-weight:400;text-transform:none;"
                                                   Variant="Variant.Text"
                                                   Disabled="@_uploading">
                                            @ConstantString.Import
                                        </MudButton>
                                    </ActivatorContent>
                                </MudFileUpload>
                            </MudMenuItem>
                        }
                    </MudMenu>
                </MudToolBar>
                <MudStack Row Spacing="1">
                    @if (_accessRights.Search)
                    {
                        <MudTextField T="string" ValueChanged="@(s => OnSearch(s))" Value="@_ejemplosQuery.Keyword" Placeholder="@ConstantString.Search" Adornment="Adornment.End"
                                      AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Small">
                        </MudTextField>
                    }
                </MudStack>
            </MudStack>
        </MudStack>
            </ToolBarContent>
            <Columns>
                <SelectColumn ShowInFooter="false"></SelectColumn>
                <TemplateColumn HeaderStyle="width:60px" Title="@ConstantString.Actions" Sortable="false">
                    <CellTemplate>
                        @if (_accessRights.Edit || _accessRights.Delete)
                        {
                            <MudMenu Icon="@Icons.Material.Filled.Edit" Variant="Variant.Outlined" Size="Size.Small"
                                     Dense="true"
                                     EndIcon="@Icons.Material.Filled.KeyboardArrowDown" IconColor="Color.Info" AnchorOrigin="Origin.CenterLeft">
                                @if (_accessRights.Edit)
                                {
                                    <MudMenuItem OnClick="@(()=>OnEditEjemplo(context.Item))">@ConstantString.Edit</MudMenuItem>
                                }
                                @if (_accessRights.Delete)
                                {
                                    <MudMenuItem OnClick="@(()=>OnDeleteEjemplo(context.Item))">@ConstantString.Delete</MudMenuItem>
                                }
                            </MudMenu>
                        }
                        else
                        {
                            <MudTooltip Text="@ConstantString.NoAllowed" Delay="300">
                                <MudIconButton Variant="Variant.Outlined"  
                                               Disabled="true"
                                               Icon="@Icons.Material.Filled.DoNotTouch"
                                               Size="Size.Small"
                                               Color="Color.Surface">
                                    @ConstantString.NoAllowed
                                </MudIconButton>
                            </MudTooltip>
                        }
                    </CellTemplate>
                </TemplateColumn>
                <PropertyColumn Property="x => x.Name" Title="@L[_ejemploDto.GetMemberDescription(x=>x.Name)]"> 
   <CellTemplate>
      <div class="d-flex flex-column">
        <MudText Typo="Typo.body1">@context.Item.Name</MudText>
        <MudText Typo="Typo.body2" Class="mud-text-secondary">@context.Item.Description</MudText>
     </div>
    </CellTemplate>
</PropertyColumn>
                <PropertyColumn Property="x => x.Email" Title="@L[_ejemploDto.GetMemberDescription(x=>x.Email)]" />
                <PropertyColumn Property="x => x.PhoneNumber" Title="@L[_ejemploDto.GetMemberDescription(x=>x.PhoneNumber)]" />
                <PropertyColumn Property="x => x.Country" Title="@L[_ejemploDto.GetMemberDescription(x=>x.Country)]" />

            </Columns>
            <NoRecordsContent>
                <MudText>@ConstantString.NoRecords</MudText>
            </NoRecordsContent>
            <LoadingContent>
                <MudText>@ConstantString.Loading</MudText>
            </LoadingContent>
            <PagerContent>
                <MudDataGridPager PageSizeOptions="@(new int[]{10,15,30,50,100,500,1000})" />
            </PagerContent>
</MudDataGrid>



@code {
    public string? Title { get; private set; }
    private int _defaultPageSize = 15;
    private HashSet<EjemploDto> _selectedEjemplos = new HashSet<EjemploDto>();
    private MudDataGrid<EjemploDto> _ejemplosGrid = default!;
    private EjemploDto _ejemploDto = new();
    private bool _loading;
    private bool _uploading;
    private bool _exporting;
    [CascadingParameter]
    private Task<AuthenticationState> AuthState { get; set; } = default!;
    [CascadingParameter]
    private UserProfile? UserProfile { get; set; }


    private EjemplosWithPaginationQuery _ejemplosQuery { get; set; } = new();
    private EjemplosAccessRights _accessRights = new();

    protected override async Task OnInitializedAsync()
    {
        Title = L[_ejemploDto.GetClassDescription()];
        _accessRights = await PermissionService.GetAccessRightsAsync<EjemplosAccessRights>(); 
    }
     
    private async Task<GridData<EjemploDto>> ServerReload(GridState<EjemploDto> state)
    {
        try
        {
            _loading = true;
            _ejemplosQuery.CurrentUser = UserProfile;
            var sortDefinition = state.SortDefinitions.FirstOrDefault();
            _ejemplosQuery.OrderBy = sortDefinition?.SortBy ?? "Id";
            _ejemplosQuery.SortDirection = (sortDefinition != null && sortDefinition.Descending)
                                      ? SortDirection.Descending.ToString()
                                      : SortDirection.Ascending.ToString();
            _ejemplosQuery.PageNumber = state.Page + 1;
            _ejemplosQuery.PageSize = state.PageSize;
            var result = await Mediator.Send(_ejemplosQuery).ConfigureAwait(false);
            return new GridData<EjemploDto>() { TotalItems = result.TotalItems, Items = result.Items };
        }
        finally
        {
            _loading = false;
        }

    }
    private async Task OnSearch(string text)
    {
        _selectedEjemplos.Clear();
        _ejemplosQuery.Keyword = text;
        await _ejemplosGrid.ReloadServerData();
    }
    private async Task OnListViewChanged(EjemploListView listview)
    {
        _ejemplosQuery.ListView = listview;
        await _ejemplosGrid.ReloadServerData();
    }
    private async Task OnRefresh()
    {
        EjemploCacheKey.Refresh();
        _selectedEjemplos.Clear();
        _ejemplosQuery.Keyword  = string.Empty;
        await _ejemplosGrid.ReloadServerData();
    }
    private Task ShowEditFormDialog(string title, AddEditEjemploCommand command)
    {
        return DialogServiceHelper.ShowFormDialogAsync<EjemploFormDialog, AddEditEjemploCommand>(
            title,
            command,
            async () =>
            {
                await _ejemplosGrid.ReloadServerData();
                _selectedEjemplos.Clear();
            });
    }
    private void OnDataGridRowClick(EjemploDto dto)
    {
        Navigation.NavigateTo($"/pages/ejemplos/view/{dto.Id}");
    }
    private Task OnCreate()
    {
        var command = new AddEditEjemploCommand();
        return ShowEditFormDialog(L["New Ejemplo"], command);
    }
    private Task OnCloneEjemplo()
    {
        var dto = _selectedEjemplos.First();
        var command = new AddEditEjemploCommand()
        {
                    Name = dto.Name, 
        Description = dto.Description, 
        Email = dto.Email, 
        PhoneNumber = dto.PhoneNumber, 
        Country = dto.Country, 

        };
        return ShowEditFormDialog(L["Clone Ejemplo"], command);
    }
    private Task OnEditEjemplo(EjemploDto dto)
    {
       //var command = Mapper.Map<AddEditEjemploCommand>(dto);
       //return ShowEditFormDialog(L["Edit Ejemplo"], command);
       Navigation.NavigateTo($"/pages/ejemplos/edit/{dto.Id}");
       return Task.CompletedTask;
    }

    private Task OnDeleteEjemplo(EjemploDto dto)
    {
        var contentText = string.Format(ConstantString.DeleteConfirmation, dto.Name);
        var command = new DeleteEjemploCommand(new int[] { dto.Id });
        return DeleteEjemplosInternal(command, contentText); 
    }

    private Task OnDeleteSelectedEjemplos()
    {
        var contentText = string.Format(ConstantString.DeleteConfirmWithSelected, _selectedEjemplos.Count);
        var command = new DeleteEjemploCommand(_selectedEjemplos.Select(x => x.Id).ToArray());
        return DeleteEjemplosInternal(command, contentText);
    }

    private Task DeleteEjemplosInternal(DeleteEjemploCommand command, string contentText)
    {
        return DialogServiceHelper.ShowDeleteConfirmationDialogAsync(
            command,
            ConstantString.DeleteConfirmationTitle,
            contentText,
            async () =>
            {
                await _ejemplosGrid.ReloadServerData();
                _selectedEjemplos.Clear();
            });
    }


    private async Task OnExport()
    {
        _exporting = true;
        var request = new ExportEjemplosQuery()
            {
                Keyword = _ejemplosQuery.Keyword,
                CurrentUser = UserProfile,
                ListView = _ejemplosQuery.ListView,
                OrderBy = _ejemplosGrid.SortDefinitions.Values.FirstOrDefault()?.SortBy ?? "Id",
                SortDirection = (_ejemplosGrid.SortDefinitions.Values.FirstOrDefault()?.Descending ?? true) ? SortDirection.Descending.ToString() : SortDirection.Ascending.ToString()
            };
        var result = await Mediator.Send(request);
        await result.MatchAsync(
            async data =>
            {
                await BlazorDownloadFileService.DownloadFileAsync($"{L["Ejemplos"]}.xlsx", result.Data, contentType:"application/octet-stream");
                Snackbar.Add($"{ConstantString.ExportSuccess}", MudBlazor.Severity.Info);
            },
            errors =>
            {
                Snackbar.Add($"{errors}", MudBlazor.Severity.Error);
                return Task.CompletedTask;
            });
        _exporting = false;
    }
    private async Task OnImportData(IBrowserFile file)
    {
        _uploading = true;
        var stream = new MemoryStream();
        await file.OpenReadStream().CopyToAsync(stream);
        var command = new ImportEjemplosCommand(file.Name, stream.ToArray());
        var result = await Mediator.Send(command);
        await result.MatchAsync(
            async data =>
            {
                await _ejemplosGrid.ReloadServerData();
                Snackbar.Add($"{ConstantString.ImportSuccess}", MudBlazor.Severity.Info);
            }, errors =>
            {
                Snackbar.Add($"{errors}", MudBlazor.Severity.Error);
                return Task.CompletedTask;
            });
        _uploading = false;
    }

}
